<div class="auth-widget">
  <div>
  <h1>Tactical Warfare</h1>
    <form id="register-form">
      <label>Username:
      <input type="text" placeholder="Username..."/>
      </label>
      <br/>
      <label>Password:
      <input type="password"/>
      </label>
      <br/>
      <input type="submit" value="Register"/>
    </form>
    <form id="signin-form">
      <label>Username:
      <input type="text" placeholder="Username..."/>
      </label>
      <br/>
      <label>Password:
      <input type="password"/>
      </label>
      <br/>
      <input type="submit" value="Sign In"/>
    </form>
    <span id="register-button">Register</span> | <span id="signin-button">Sign In</span>
  </div>
  <button class="auth-widget-toggle">Sign In</button>
</div>

    </div>
    <button class="camera-widget-toggle"></button>
  </div>

  <div class="camera-rotation">
    <i class="fa fa-arrows" aria-hidden="true"></i>
  </div>

  <div class="camera-zoom">
    <div class="zoom-in">
      <i class="fa fa-search-plus" aria-hidden="true"></i>
    </div>
    <div class="zoom-out">
      <i class="fa fa-search-minus" aria-hidden="true"></i>
    </div>
  </div>
</div>

<div class="bottom-options" id="turn-options">
  <div id = "attack-button">Attack</div>
  <div id = "move-button">Move</div>
  <div id = "forfeit-button">Forfeit</div>
</div>

<div class="bottom-options hidden" id ="attack-options">
  <div id="fire-button">Fire</div>
  <div class = "cancel-button">Cancel</div>
</div>

<div class="bottom-options hidden" id="position-options">
  <div class="cancel-button">Cancel</div>
</div>
<script>
  const authWidget = document.querySelector('.auth-widget');
  const authWidgetToggle = document.querySelector('.auth-widget-toggle');
  authWidget.style.top = '-120px';

  authWidgetToggle.addEventListener(
    'click',
    () => {
      if (authWidget.style.top === '50%') {
        authWidget.style.top = '-120px';
        authWidgetToggle.innerHTML = 'Sign In';
      } else {
        authWidget.style.top = '50%';
        authWidgetToggle.innerHTML = 'Play now';
      }
    }
  )

