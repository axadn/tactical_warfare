<link rel="stylesheet" href="stylesheets/main.css">
<link rel="stylesheet"
      href="stylesheets/font-awesome-4.7.0/css/font-awesome.css">
<meta name="viewport" content="width=device-width, initial-scale=1">

<script type="text/javascript" src="/babylon.js"></script>
<script type="text/javascript" src="/bundle.js"></script>

<div class="auth-widget">
  <div>
  <h1>Tactical Warfare</h1>
    <form id="register-form">
      <label>Username:
      <input type="text" placeholder="Username..."/>
      </label>
      <br/>
      <label>Password:
      <input type="password"/>
      </label>
      <br/>
      <input type="submit" value="Register"/>
    </form>
    <form id="signin-form">
      <label>Username:
      <input type="text" placeholder="Username..."/>
      </label>
      <br/>
      <label>Password:
      <input type="password"/>
      </label>
      <br/>
      <input type="submit" value="Sign In"/>
    </form>
    <span id="register-button">Register</span> | <span id="signin-button">Sign In</span>
  </div>
  <button class="auth-widget-toggle">Sign In</button>
</div>

<div class="active-sockets-widget">
  <div class="active-sockets-toggle">
    <
  </div>
  <div class="active-sockets">
    
  </div>
</div>

<div class="camera-rotation">
  <i class="fa fa-arrows" aria-hidden="true"></i>
</div>

<div class="camera-zoom">
  <div class="zoom-in">
    <i class="fa fa-search-plus" aria-hidden="true"></i>
  </div>
  <div class="zoom-out">
    <i class="fa fa-search-minus" aria-hidden="true"></i>
  </div>
</div>

<div class="game">
  <canvas id="render-canvas"></canvas>
</div>

<script>
  const authWidget = document.querySelector('.auth-widget');
  const authWidgetToggle = document.querySelector('.auth-widget-toggle');
  authWidget.style.top = '-120px';

  authWidgetToggle.addEventListener(
    'click',
    () => {
      if (authWidget.style.top === '50%') {
        authWidget.style.top = '-120px';
        authWidgetToggle.innerHTML = 'Sign In';
      } else {
        authWidget.style.top = '50%';
        authWidgetToggle.innerHTML = 'Play now';
      }
    }
  )
</script>
